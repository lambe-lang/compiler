--{
  This boolean trait provides:
  - foldable Bool
  - operation
}

data True
data False
type Bool = True | False

-- section foldable

trait Foldable s for s {
    sig fold : forall b. self -> (True -> b) -> (False -> b) -> b
}

impl Foldable True {
    def fold t _ = t self
}

impl Foldable False {
    def fold _ f = f self
}

impl Foldable Bool with Foldable True with Foldable False

-- The Operation trait defines basic capabilities for deferred boolean

type bool = forall a. a -> Bool

sig true : bool
def true = { True }

sig false : bool
def false = { False }

trait Operation for bool with Foldable Bool {
    sig (||) : self -> self -> self
    def (||) b = { self () fold true b }

    sig (&&) : self -> self -> self
    def (&&) b = { self () fold b false }

    sig not : self -> self
    def not = { self () fold false true }

    sig (=>) : self -> self -> self
    def (=>) b = self not || b

    sig eval : self -> Bool
    def eval = self ()
}
